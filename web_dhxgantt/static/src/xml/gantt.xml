<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="web_dhxgantt.gantt_view">
        <!-- <button class="btn btn-primary">Click Me</button> -->
        <div class="o_dhx_gantt_root">
            <div class="o_dhx_gantt_header">
                <div class="o_dhx_gantt_buttons">

                    <div class="btn-group btn-sm">
                        <button type="button" class="btn btn-secondary o_dhx_critical_path o_dhx_button">Show Critical Path</button>
                        <button type="button" class="btn btn-secondary o_dhx_reschedule o_dhx_button">Reschedule</button>
                    </div>

                    <div class="btn-group btn-sm o_dhx_button_right">
                        <button type="button" class="btn btn-secondary o_dhx_show_all ">Show All</button>
                        <button type="button" class="btn btn-secondary o_dhx_show_workdays">Show Work Days Only</button>
                        <button type="button" class="btn btn-secondary o_dhx_show_officehours">Show Office Hours Only</button>
                    </div>

                    <div class="btn-group btn-sm o_dhx_button_right">
                        <button type="button" class="btn btn-secondary o_dhx_zoom_out ">Zoom Out</button>
                        <button type="button" class="btn btn-secondary o_dhx_zoom_in">Zoom In</button>
                    </div>

                </div>
            </div>
            <div class="o_dhx_gantt">
                <!-- Container for gantt rendering -->
            </div>
        </div>
    </t>

</templates>
